<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/atlas_view_messages_convert_avatar_container"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/atlas_shape_rounded16_gray_no_bottom"
        android:padding="3sp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/atlas_view_messages_convert_initials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/atlas_text_size_smaller2"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="1dp"

        android:paddingTop="1dp">

        <!-- avatar placeholder -->

        <!--  android:background="#D1FFF1" - blue -->

        <LinearLayout
            android:id="@+id/atlas_view_messages_cell_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <View
            android:id="@+id/atlas_view_messages_convert_spacer_right"
            android:layout_width="32dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/atlas_view_messages_convert_timebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/atlas_view_messages_convert_delivery_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:textColor="@color/atlas_text_gray"
            android:textSize="@dimen/atlas_text_size_smaller2" />

        <TextView
            android:id="@+id/atlas_view_messages_convert_timebar_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical|right"
            android:textColor="@color/atlas_text_gray"
            android:textSize="@dimen/atlas_text_size_smaller2" />

        <TextView
            android:id="@+id/atlas_view_messages_convert_timebar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textColor="@color/atlas_text_gray"
            android:textSize="@dimen/atlas_text_size_smaller2" />
    </LinearLayout>

</LinearLayout>