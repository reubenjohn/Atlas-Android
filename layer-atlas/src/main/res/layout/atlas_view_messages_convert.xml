<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/atlas_shape_rounded16_gray"
            android:padding="2dp"
            android:id="@+id/container_atlas_view_messages_convert_view"
            android:layout_margin="2dp"
            android:layout_marginTop="4dp">

            <FrameLayout
                android:id="@+id/atlas_view_messages_convert_avatar_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:id="@+id/atlas_view_messages_convert_initials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/atlas_text_size_smaller2"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/atlas_view_messages_cell_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/atlas_view_messages_convert_timebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/atlas_view_messages_convert_delivery_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/atlas_text_gray"
                    android:textSize="@dimen/atlas_text_size_smaller2" />

                <TextView
                    android:id="@+id/atlas_view_messages_convert_timebar_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/atlas_text_gray"
                    android:textSize="@dimen/atlas_text_size_smaller2" />

                <TextView
                    android:id="@+id/atlas_view_messages_convert_timebar_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/atlas_text_gray"
                    android:textSize="@dimen/atlas_text_size_smaller2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/atlas_view_messages_convert_spacer_right"
        android:layout_width="32dp"
        android:layout_height="match_parent" />

</LinearLayout>